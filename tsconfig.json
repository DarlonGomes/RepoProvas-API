{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    // "rootDir": "./src",
    "rootDirs": ["./src", "./tests"],
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "checkJs": true,
    "moduleResolution": "node"
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
